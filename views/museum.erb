<h1><%=@museum.name() %>'s Current Collection</h1>
<br>

<h3>Add a Piece of Art to <%=@museum.name() %>'s Collection:</h3>

<form action="/museums/:id" method="post">
  <input id="museum_id" name="museum_id" type="hidden" value="<%= @museum.id() %>">
  <label for="description">Artwork's Name:</label>
  <input id="description" name="description" type="text">
  <button type="submit">Add Artwork</button>
</form>

<hr>

<% if @museum.artworks.any?() %>
<p><h3><%=@museum.name() %>'s Collection:</h3></p>

<ul>
  <% @museum.artworks.each do |artwork| %>
  <li><%= artwork.description() %></li>
  <% end %>
</ul>
<% else %>
<p><h4>There is currently no art in <%=@museum.name() %>'s collection.</h4></p>
<% end %>

<hr>

<form action="/museums/<%= @museum.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit <%=@museum.name() %> name:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>

<br>

<form action="/">
  <input type="submit" value="Home" style="height:2em; width:37em; margin: 2em 0em;">
</form>

<br>
<br>
<hr>
<h3>If you delete <%=@museum.name() %>, it's current collection will be deleted as well.</h3>
<form action="/museums/<%= @museum.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger btn-block">Delete <%=@museum.name() %>!</button>
</form>
